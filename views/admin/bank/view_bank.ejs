<script>
    $('#dataTable').on('click', '.button-update', function(){
        let id = $(this).data('id')
        let name = $(this).data('name')
        let nameBank = $(this).data('name-bank')
        let nomorRekening = $(this).data('nomor-rekening')
        $('#editModal').modal('show')
        $('.id').val(id)
        $('.name').val(name)
        $('.nameBank').val(nameBank)
        $('.nomorRekening').val(nomorRekening)
    })
</script>